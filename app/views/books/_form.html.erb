  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :category_id %>
    <%= f.collection_select :category_id, Category.order(:name),:id,:name, include_blank: true %>
  </div>

  <div class="field">
    <%= f.label :price %>
    <%= f.text_field :price %>
  </div>

  <div class="field">
    <%= f.label :quantity %>
    <%= f.number_field :quantity %>
  </div>

  <div class="field">
    <%= f.label :author_id %>
    <%= f.collection_select :author_id, Author.order(:name),:id,:name, include_blank: true %>
  </div>

  <div class="field">
    <%= f.label :publisher_id %>
    <%= f.collection_select :publisher_id, Publisher.order(:name),:id,:name, include_blank: true %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
